{
  "compilerOptions": {
    "target": "ES2022", // Compile for latest ECMAScript version
    "module": "ESNext", // Use native ES modules
    "moduleResolution": "node", // Resolve modules using Node.js rules
    "jsx": "preserve", // Preserve JSX syntax for Vue JSX (if used)
    "strict": true, // Enable strict type-checking options
    "esModuleInterop": true, // Enable interoperability between CommonJS and ES modules
    "allowSyntheticDefaultImports": true, // Allow default imports from modules with no default export
    "sourceMap": true, // Generate source maps for debugging
    "resolveJsonModule": true, // Allow importing JSON files
    "lib": ["ESNext", "DOM"], // Specify library files to be included in the compilation
    "types": ["vite/client"] // Include Vite types
  },
  "include": [
    "src" // Main project source
  ],
  "exclude": [
    "node_modules", // Exclude external modules
    "dist" // Exclude build output folder
  ]
}
